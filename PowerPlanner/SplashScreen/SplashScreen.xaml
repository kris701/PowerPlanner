<Window x:Class="PowerPlanner.SplashScreen.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PowerPlanner.SplashScreen"
        mc:Ignorable="d"
        Background="#721D2B40"
        Height="100" Width="400" WindowStyle="None" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded"
        AllowsTransparency="true" ShowInTaskbar="False">
    <StackPanel Orientation="Horizontal">
        <Image Source="/powerIcon.png" Width="100" Height="70"/>
        <Label Content="Power Planner" Foreground="White" FontSize="40" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </StackPanel>
</Window>
